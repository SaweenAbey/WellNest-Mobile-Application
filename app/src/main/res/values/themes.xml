<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WellNestMobileApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/primary_dark</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="materialCardViewStyle">@style/Widget.WellNest.Card</item>
        <item name="linearProgressIndicatorStyle">@style/Widget.WellNest.Progress</item>
    </style>

    <style name="Theme.WellNestMobileApplication" parent="Base.Theme.WellNestMobileApplication" />

    <style name="Widget.WellNest.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="Widget.WellNest.Progress" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackThickness">10dp</item>
        <item name="trackCornerRadius">10dp</item>
    </style>
</resources>