<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/back_arrow"
        android:backgroundTint="@color/black"
        android:textColor="@color/text_primary"
        android:textColorLink="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Set Today's Mood"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Mood Display Container -->
        <FrameLayout
            android:id="@+id/moodContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFD700"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Large Emoji -->

                <!-- Mood Label -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvSelectedMood"
                        android:layout_width="wrap_content"
                        android:layout_height="147dp"
                        android:layout_marginTop="4dp"
                        android:text="ðŸ˜Š"
                        android:textSize="120sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvMoodLabel"
                        android:layout_width="255dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="36dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/feeling_happy"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvSelectedMood" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@+id/tvMoodLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvSelectedMood">

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="December 18"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:text="â€¢"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="8:45 am"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Date and Time -->

            </LinearLayout>

        </FrameLayout>

        <!-- Emoji Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Select your mood"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Emoji Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emoji_selector_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/emoji1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/emoji_selected_bg"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/emoji_happy" />

                        <ImageView
                            android:id="@+id/emoji2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="8dp"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/emoji_sad" />

                        <ImageView
                            android:id="@+id/emoji3"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="8dp"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/emoji_neutral" />

                        <ImageView
                            android:id="@+id/emoji4"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="8dp"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/emoji_anxious" />

                        <ImageView
                            android:id="@+id/emoji5"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="8dp"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/emoji_excited" />

                        <ImageView
                            android:id="@+id/emoji6"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="8dp"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/emoji_angry" />

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </LinearLayout>

        <!-- Notes Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Add notes"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/notes_input_bg"
                android:gravity="top|start"
                android:hint="Type here..."
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:padding="16dp"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Done Button -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_rounded_green"
            android:fontFamily="@font/poppins_bold"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
