<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/star_background">

    <!-- Animated Stars -->
    <ImageView
        android:id="@+id/star1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/ic_star"
        android:alpha="0.7" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="80dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_star"
        android:alpha="0.5" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="120dp"
        android:src="@drawable/ic_star"
        android:alpha="0.8" />

    <ImageView
        android:id="@+id/star4"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="60dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_star"
        android:alpha="0.6" />

    <ImageView
        android:id="@+id/star5"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/ic_star"
        android:alpha="0.9" />

    <!-- Bed Icons -->
    <ImageView
        android:id="@+id/bed1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="100dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_bed"
        android:alpha="0.4" />

    <ImageView
        android:id="@+id/bed2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="350dp"
        android:layout_marginStart="80dp"
        android:src="@drawable/ic_bed"
        android:alpha="0.3" />

    <ImageView
        android:id="@+id/bed3"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_bed"
        android:alpha="0.5" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        android:background="@drawable/back_arrow"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/small_snap"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Countdown Display -->
        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/_01_00"
            android:textColor="@color/white"
            android:textSize="72sp"
            android:textStyle="bold" />

        <!-- Duration Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins"
                android:text="@string/duration_01_00"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/seekBarDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="300"
                android:min="15"
                android:progress="60"
                android:progressTint="@color/white"
                android:thumbTint="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="15s"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:gravity="end"
                    android:text="5m"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnStartStop"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/start_button_bg"
                android:fontFamily="@font/poppins_medium"
                android:text="▶️ Start"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAddTime"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/add_time_button_bg"
                android:fontFamily="@font/poppins_medium"
                android:text="+30s"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Custom Time Button -->
        <Button
            android:id="@+id/btnCustomTime"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custom_time_button_bg"
            android:fontFamily="@font/poppins_medium"
            android:text="⏰ Custom Time"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Music Button -->
        <Button
            android:id="@+id/btnMusic"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/music_button_bg"
            android:fontFamily="@font/poppins_medium"
            android:text="🎵 Play Music"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>
