<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/habit_card_background">

        <!-- Top Section with Gradient Accent -->
        <LinearLayout
            android:id="@+id/topSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/habit_card_top_gradient"
            android:padding="16dp">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Habit Icon -->
                <TextView
                    android:id="@+id/tvHabitIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="⏱️"
                    android:textSize="24sp"
                    android:background="@drawable/circle_icon_background"
                    android:elevation="2dp" />

                <!-- Habit Name and Type -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvHabitName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning Meditation"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvHabitType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time-based"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/poppins"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnEdit"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/accent_blue"
                        android:background="@drawable/circle_button_background"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:elevation="2dp" />

                    <ImageButton
                        android:id="@+id/btnDelete"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_delete"
                        android:tint="@color/primary_dark"
                        android:background="@drawable/circle_button_background"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:layout_marginStart="8dp"
                        android:elevation="2dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Progress Bar with Percentage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ProgressBar
                    android:id="@+id/progressHabit"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progressTint="@color/primary_green"
                    android:progressBackgroundTint="@color/lightGray"
                    android:max="100"
                    android:progress="0" />

                <TextView
                    android:id="@+id/tvProgressPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginStart="12dp"
                    android:minWidth="40dp"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Status and Controls Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Status Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCountdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 min left"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/tvSubStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keep going!"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/poppins"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- Step Control Buttons (for step-based habits) -->
                <LinearLayout
                    android:id="@+id/stepControls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRemoveSteps"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:text="-"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/primary_green"
                        app:strokeWidth="2dp" />

                    <TextView
                        android:id="@+id/tvStepIncrement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginHorizontal="12dp"
                        android:gravity="center"
                        android:minWidth="50dp"
                        android:layout_gravity="center_vertical" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddSteps"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:text="+"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/primary_green" />

                </LinearLayout>

                <!-- Completion Checkbox -->
                <CheckBox
                    android:id="@+id/cbHabitCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primary_green"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>